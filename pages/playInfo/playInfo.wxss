.page {
  width: 100%;
  height: 100%;
  background: #151515;
  display: flex;
  color: #fff;
  box-sizing: border-box;
}
.page .playLeft {
  /* width: 193vh; */
  /* flex: 1; */
  padding: 15.3vh 12vh 16vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: calc(100vw - 101vh);
}
.page .playLeft .noReady .title-name {
  width: 100vh;
  height: 10vh;
  background: rgba(255,255,255, 0.1);
  display: block;
  margin-bottom: 5vh;
}
.page .playLeft .noReady .title-abumInfo {
  width: 70vh;
  height: 8vh;
  background: rgba(255,255,255, 0.1);
  display: block;
  margin-top: 3vh;
}
.page .playLeft .title {
  font-size: 6.7vh;
  position: relative;
  flex: 1;
}
.page .playLeft .title .title-name {
  display: block;
  width: 100vh;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 5vh;
}
.page .playLeft .title .title-abumInfo {
  display: flex;
  font-size: 5.2vh;
  color: #afafaf;
  margin-top: 3vh;
  height: 8vh;
  /* position: absolute; */
  /* bottom: 0; */
}
.page .playLeft .title .title-abumInfo .singer {
  text-align: left;
  /* flex: 1; */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 5vh;
  width: calc(100% - 79vh)!important;
}
.page .playLeft .player {
  margin-top: 14.7vh;
  position: relative;
}
.page .playLeft .player .slider {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  margin: 0;
  opacity: 0;
  z-index: 10;
}
.page .playLeft .player .progress {
  position: relative;
  height: 1.24vh;
  background: #434343;
  border-radius: 8px;
}
.wx-progress-bar {
  border-radius: 8px;
}

.page .playLeft .player .time {
  position: absolute;
  left: 0;
  top: 3.6vh;
  font-size: 4.3vh;
  color: #696969;
}

.page .playLeft .player .duration {
  position: absolute;
  right: 0vh;
  top: 3.6vh;
  font-size: 4.3vh;
  color: #696969;
}

.page .playLeft .btns {
  display: flex;
  margin-top: 15vh;
  height: 15.5vh;
  justify-content: space-around;
  align-items: center;
}
.page .playLeft .btns > view {
  position: relative;
}
.page .playLeft .btns .nextBtn {
  position: relative;
  overflow: visible;
}
.page .playLeft .btns .nextBtn::after {
  content: '';
  display: block;
  width: 0.6vh;
  height: 11vh;
  position: absolute;
  background: rgba(255,255,255, 0.08);
  right: -6.9vh;
  top: 2vh;
}
.page .playLeft .btns .modal {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 21.5vh;
  height: 21.5vh;
  background: #000;
  opacity: 0.35;
  border-radius: 50%;
}
.page .playLeft image {
  width: 100%;
  height: 100%;
}
.page .playRight {
  height: 100%;
  display: flex;
  width: 101vh;
  /* flex: 1; */
  justify-content: center;
  align-items: center;
}
.page .playRight image {
  width: 18.65vw;
  height: 18.65vw;
  border-radius: 2vh;
}

.page .playRight .image {
  width: 18.65vw;
  height: 18.65vw;
  border-radius: 2vh;
  background:rgba(255,255,255, 0.1);
}

#playstate {
  position: absolute;
  display: block;
  height: 5.2vh;
  width: 5.2vh;
  overflow: hidden;
  /* background-color: #ff6100; */
  border-radius: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
  z-index: 2;
}

#dpstate {
  position: absolute;
  height: 1.24vh;
  width: 0;
  /* background-color: #ff6100; */
  overflow: hidden;
  left: 0;
  top: 50%;
  margin-top: -0.62vh;
  border-radius: 8px
}

/* 大于1/2的情况 */
.page .songDc {
  width: 100%;
}
.page .songDc .songDcTitle {
  display: flex;
  align-items: center;
}
.page .songDc .songDcTitle image {
  width: 23vh;
  height: 23vh;
  border-radius: 2vh;
  margin-right: 7.7vh;
  flex-shrink: 0;
}

.page .songDc .songDcTitle .image {
  width: 23vh;
  height: 23vh;
  border-radius: 2vh;
  margin-right: 7.7vh;
  background: rgba(255,255,255, 0.1);
}
.page .songDc .songDcTitle .title .title-abumInfo .singer {
  width: 68vh;
}

.page .songDc .player {
  margin-top: 14vh;
}

/* 弹出的播放列表 */
.playList {
  position: fixed;
  background: #222222;
  left: 0;
  top: 0;
  width: 180vh;
  height: 100%;
  z-index: 999;
  padding: 0 10.5vh 5.5vh;
  overflow: auto;
  transform: translateX(-180vh);
}
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.8;
}
.playList .songList {
  width: 163vh;
  padding: 1.5vh;
}
.playList .songList .view {
  color: #fff;
  overflow: hidden;
  border-bottom: 1px solid #2d2d2d;
  height: 16.5vh;
  padding: 5vh 2.42vh 5vh 3vh;
  box-shadow: inset 0px 0px 0px 5px rgba(255, 255, 255, 0);
}
.playList .songList .view text:nth-child(1) {
  width: 8vh;
}
.playList .songList .view:last-child {
  margin-bottom: 0;
}
.playList .songList text {
  font-size: 4.9vh;
  margin-right: 2.4vh;
  float: left;
}.playList .songList text:nth-child(2) {
  width: 110vh;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.playList .songList text:last-child {
  float: right;
  margin-right: 0;
}
.playList .songList .audition {
  margin-left: 2.5vh;
  font-size: 4vh;
  line-height: 4vh;
  color: #fa6501;
  padding: 0.8vh 1.5vh;
  border: 1px solid #fa6501;
  border-radius: 1vh;
  transform: translateY(0.5vh);
}
.playList button {
  border: none;
  border-top: 1px solid #ddd;
  background: #eaeaea;
}
.playList button::after {
  content: none;
}
.playList .title {
  display: flex;
  color: #fff;
  font-size: 6.1vh;
  display: flex;
  justify-content: space-between;
  margin-bottom: 5.1vh;
  padding: 8vh 1.5vh 0;
  position: fixed;
  width: 160vh;
  top: 0;
  background: #222222;
  z-index: 999;
}
.playList .title button {
  width: 19.6vh;
  height: 10.4vh;
  background: #333333;
  border-radius: 10vh;
  padding: 0;
  margin: 0;
  border: none;
  transform: translateY(-3vh);
  position: relative;
}
.playList .title button image {
  width: 19.6vh;
  height: 10.4vh;
  position: absolute;
  left: 0;
  top: 0;
}

.noTransform {
  transition: none!important;
  transform: none!important;
}
.wx-progress-bar {
  height: 1.24vh!important;
}
.playGif {
  width: 7.6vh;
  height: 7.6vh;
  margin-left: -5vh;
  /* vertical-align: middle; */
  transform: translateX(2.5vh);
  float: left;
  margin-right: 7.6vh;
}
.wx-slider-handle {
  width: 10vh!important;
  height: 10vh!important;
  margin-top: -5vh!important;
  margin-left: -5vh!important;
}
.title-trial {
  /* position: absolute; */
  width: 79vh;
  font-size: 4.9vh;
  color: #fff;
  background-image: linear-gradient(to right , #e97630,#e62a29);
  padding: 0.5vh 4.5vh;
  border-radius: 5vh;
  /* right: 0;
  bottom: 0;
  float: right;
  display: flex; */
  text-align: center;
  flex-direction: row;  
  justify-content: center; 
}
.slider-view {
  transform: translateY(-1.5vh);
}
wx-slider {
  margin: 0!important;
}
wx-slider .wx-slider-handle {
  background-color: #fdd000;
  width: 5.2vh!important;
  height: 5.2vh!important;
  transform: translate(2.4vh, 2.4vh);
}
.wx-slider-handle-wrapper {
  background-color: #434343!important;
}
.wx-slider-handle-wrapper {
  height: 1.24vh!important;
}
.wx-slider-track {
  background-color: #FDD000!important;
}